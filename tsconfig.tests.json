{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["vitest/globals", "vitest", "jest", "node", "jsdom"]
  },
  "include": [
    "test/**/*.ts",
    "test/**/*.tsx",
    "e2e/**/*.ts",
    "e2e/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx"
  ]
}
