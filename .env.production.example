# Stakeados Platform - Production Environment Variables

# Application
NEXT_PUBLIC_APP_NAME=Stakeados
NEXT_PUBLIC_APP_URL=https://stakeados.com
NODE_ENV=production

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/stakeados_prod
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# Web3 Configuration (Production)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_production_wallet_connect_project_id
NEXT_PUBLIC_BASE_CHAIN_ID=8453
NEXT_PUBLIC_COINBASE_API_KEY=your_production_coinbase_api_key

# OpenAI Configuration (Production)
OPENAI_API_KEY=your_production_openai_api_key
OPENAI_ORG_ID=your_openai_org_id
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Email Configuration (Production)
RESEND_API_KEY=your_production_resend_api_key
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASS=your_production_resend_api_key

# Analytics Configuration (Production)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_production_ga_measurement_id
NEXT_PUBLIC_HIGHLIGHT_PROJECT_ID=your_production_highlight_project_id
SENTRY_DSN=your_production_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Discord Integration (Production)
DISCORD_BOT_TOKEN=your_production_discord_bot_token
DISCORD_CLIENT_ID=your_production_discord_client_id
DISCORD_GUILD_ID=your_production_discord_server_id
DISCORD_GENESIS_ROLE_ID=your_production_genesis_role_id
DISCORD_CITIZEN_ROLE_ID=your_production_citizen_role_id
DISCORD_CONTRIBUTOR_ROLE_ID=your_production_contributor_role_id
DISCORD_STUDENT_ROLE_ID=your_production_student_role_id
DISCORD_GENERAL_CHANNEL_ID=your_production_general_channel_id
DISCORD_GENESIS_CHANNEL_ID=your_production_genesis_channel_id
DISCORD_ANNOUNCEMENTS_CHANNEL_ID=your_production_announcements_channel_id
DISCORD_ACHIEVEMENTS_CHANNEL_ID=your_production_achievements_channel_id

# Smart Contract Deployment (Production)
PRIVATE_KEY=your_production_private_key_for_deployment
BASESCAN_API_KEY=your_production_basescan_api_key
CERTIFICATE_PROXY_ADDRESS=your_production_certificate_contract_address
CITIZENSHIP_PROXY_ADDRESS=your_production_citizenship_contract_address

# Redis Configuration (Production)
REDIS_URL=redis://your-production-redis-host:6379
REDIS_PASSWORD=your_production_redis_password
REDIS_TLS=true
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# CDN Configuration (Production)
CDN_BASE_URL=https://cdn.stakeados.com
CDN_PURGE_API_KEY=your_production_cdn_purge_api_key
CDN_PURGE_ENDPOINT=https://api.cloudflare.com/client/v4/zones/your_production_zone_id/purge_cache

# Security Configuration
JWT_SECRET=your_production_jwt_secret_key_minimum_32_characters
ENCRYPTION_KEY=your_production_encryption_key_32_characters
CSRF_SECRET=your_production_csrf_secret_key
SESSION_SECRET=your_production_session_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
HEALTH_CHECK_INTERVAL=30000

# Admin Configuration
NEXT_PUBLIC_ADMIN_EMAIL=admin@stakeados.com
ADMIN_NOTIFICATION_EMAIL=notifications@stakeados.com
ADMIN_ALERT_WEBHOOK=https://hooks.slack.com/services/your/production/webhook

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=stakeados-backups-prod
BACKUP_S3_REGION=us-east-1

# Performance Configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400
API_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb
COMPRESSION_ENABLED=true

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_REAL_TIME_FEATURES=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_SOCIAL_SHARING=true
ENABLE_NEWSLETTER=true
ENABLE_WEB3_FEATURES=true

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/production/webhook
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token
TWITTER_API_KEY=your_production_twitter_api_key
TWITTER_API_SECRET=your_production_twitter_api_secret